<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:icon="@mipmap/ic_launcher"
    android:roundIcon="@mipmap/ic_launcher_round">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divya Drishti"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vision Assistant for the Visually Impaired"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- Auto Detection Mode Button -->
    <Button
        android:id="@+id/btnAutoMode"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:text="ðŸš— Auto Detection Mode\nContinuous object detection"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF4CAF50"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:padding="16dp"/>

    <!-- Tap to Detect Mode Button -->
    <Button
        android:id="@+id/btnTapMode"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:text="ðŸ‘† Tap to Detect Mode\nTap screen to identify objects"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF2196F3"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnAutoMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:padding="16dp"/>

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ðŸ”Š Make sure volume is on\nðŸ“· Camera permission required"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnTapMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Camera Preview (hidden initially) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- Detection Results Overlay -->
    <TextView
        android:id="@+id/tvDetectionResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <!-- Tap Mode Instructions -->
    <TextView
        android:id="@+id/tvTapInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ‘† Tap anywhere to detect objects"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="#80000000"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>